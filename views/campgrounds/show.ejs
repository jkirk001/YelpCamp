<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/styles/stars.css" />

<div class="row">
  <div class="col-6">
    <div class="card mb-5">
      <% for (each of camp.images) { %>
      <img src="<%= each.url %>" class="card-img-top" /> <% } %>
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= camp.location %></li>
        <li class="list-group-item">$<%= camp.price %> per night</li>
        <li class="list-group-item">Author: <%= camp.author.username %></li>
      </ul>
      <% if(currentUser && camp.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/campgrounds/<%= camp._id %>/edit"
          >Edit this campground</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= camp._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-warning">DELETE</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <!--REviews-->

  <div class="col-6">
    <% if (currentUser) { %>
    <h2>Leave a review</h2>
    <form
      action="/campgrounds/<%= camp._id %>/reviews"
      method="POST"
      class="mb-3 needs-validation"
      novalidate
    >
      <div class="mb-1">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="4"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit!</button>
    </form>
    <% } %>
    <!--DISPLAY REVIEWSS-->
    <h3>Reviews</h3>
    <%for (each of camp.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Author: <%= each.author.username %></h5>
        <h6 class="card-subtitle">
          <p class="starability-result" data-rating="<%= each.rating %>">
            Rated: <%= each.rating %> stars
          </p>
        </h6>

        <p class="card-text">Review: <%= each.body %></p>
        <% if (currentUser && each.author.equals(currentUser._id)) { %>
        <form
          class="d-inline"
          action="/campgrounds/<%= camp._id %>/reviews/<%= each._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-warning">DELETE</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
