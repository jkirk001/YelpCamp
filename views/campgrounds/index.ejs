<% layout('layouts/boilerplate') %>
    
    <ul>
        <h2>All Campgrounds</h2>
        <% for (let camp of camps) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= camp.image  %>" alt="" class="img-fluid">
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <%= camp.description %>
                            </p>
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                            <br>
                            <a href="campgrounds/<%= camp.id %>" class="btn btn-primary"> Check it out!</a>
                        </div>
                    </div>

                </div>
            </div>
        <% } %>
    </ul>

    <div>
        <a href="/campgrounds/new">NEW Post</a>
    </div>